@page "/registro-empleado"
@layout MainLayout
@rendermode InteractiveServer

@inject NavigationManager Navigation

[SupplyParameterFromQuery(Name = "mode")]
public string? Mode { get; set; }

<div class="registro-container">

    <div class="form-card">
        <div class="card-header">
            @* <h3>@(IsModify ? "Modificar Empleado" : "Registro de Empleado")</h3> *@
        </div>

        <div class="card-body">
            <div class="form-row">
                <label>IdEmpleado</label>
                <input type="text" class="input-corto" readonly value="@(EmpleadoId?.ToString() ?? "")" />
            </div>

            <div class="form-row">
                <label>Nombre</label>
                <input type="text" @bind="nuevoEmpleado.Nombre" />
            </div>

            <div class="form-row">
                <label>Cédula</label>
                <input type="text" @bind="nuevoEmpleado.Cedula" />
            </div>

            <div class="form-row">
                <label>Cargo</label>
                <input type="text" @bind="nuevoEmpleado.Cargo" />
            </div>

            <div class="form-row">
                <label>Usuario</label>
                <input type="text" @bind="nuevoEmpleado.Usuario" />
            </div>

            <div class="form-row">
                <label>Clave</label>
                <input type="password" @bind="nuevoEmpleado.Clave" />
            </div>

            @* @if (IsModify)
            {
                <!-- botón central de "Modificar" dentro del formulario -->
                <div class="center-modificar">
                    <button class="btn-modificar" @onclick="OnModifyClicked">Modificar</button>
                </div>
            } *@
        </div>

        <div class="card-footer-buttons">
            <button class="btn-volver" @onclick="IrAtras">Volver</button>
            <button class="btn-guardar" @onclick="GuardarEmpleado">Guardar</button>
        </div>
    </div>

    <img src="/Img-Vector/Union.svg" class="vector-corner" />
</div>

@code {
    // Optional: accept an id query parameter if you want to load a specific empleado
    [SupplyParameterFromQuery(Name = "id")]
    public int? EmpleadoId { get; set; }

    // Clase simple para el binding
    public class EmpleadoModelo
    {
        public string Nombre { get; set; } = "";
        public string Cedula { get; set; } = "";
        public string Cargo { get; set; } = "";
        public string Usuario { get; set; } = "";
        public string Clave { get; set; } = "";
    }

    private EmpleadoModelo nuevoEmpleado = new EmpleadoModelo();


    private void GuardarEmpleado()
    {
        // Creación lógica
        Console.WriteLine("Guardar empleado...");
    }

    private void OnModifyClicked()
    {
        // Lógica de modificación central (ejecuta update)
        Console.WriteLine("Modificar empleado...");
        // Implementa llamada a servicio para actualizar los datos.
    }

    private void IrAtras()
    {
        Navigation.NavigateTo("/pantalla-principal-admin");
    }
}