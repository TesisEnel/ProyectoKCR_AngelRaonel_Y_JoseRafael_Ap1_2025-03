@attribute [Authorize(Roles = "Administrador")]
@page "/registro-empleado"
@page "/modificar-empleado/{EmpleadoId:int}"
@layout MainLayout
@rendermode InteractiveServer
@inject ToastService toastService
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager navigationManager
@inject ILogger<RegistroEmpleados> Logger
@inject EmpleadoService empleadoService

<div class="registro-container">
    <div class="form-card">
        <div class="card-header">
            <h3>@(EmpleadoId > 0 ? "Modificar Empleado" : "Registro de Empleado")</h3>
        </div>

        <Toasts class="p-3 toast-grande" AutoHide="true" Delay="4000" Placement="ToastsPlacement.TopRight" />

        <EditForm Model="Input" OnValidSubmit="GuardarEmpleado" FormName="registro-empleado-form">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />

            <p class="@(string.IsNullOrEmpty(statusMessage) || statusMessage.StartsWith("Éxito") ? "text-success" : "text-danger")"
               role="alert" style="text-align:center; margin: 1rem 0;">@statusMessage</p>

            <table class="modern-form-table">
                <thead>
                    <tr>
                        <th>Campo</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>IdEmpleado</strong></td>
                        <td>
                            <input type="text" class="styled-input readonly"
                                   readonly value="@(EmpleadoId > 0 ? EmpleadoId.ToString() : "Auto")" />
                        </td>
                    </tr>
                    <tr>
                        <td><label>Nombre</label></td>
                        <td>
                            <InputText @bind-Value="Input.Nombre" class="styled-input" placeholder="Nombre completo" />
                            <ValidationMessage For="() => Input.Nombre" class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td><label>Cédula</label></td>
                        <td>
                            <InputText @bind-Value="Input.Cedula" class="styled-input"
                                       disabled="@(EmpleadoId > 0)" placeholder="00000000000" />
                            <ValidationMessage For="() => Input.Cedula" class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td><label>Cargo / Rol</label></td>
                        <td>
                            <InputSelect @bind-Value="Input.Cargo" class="styled-input">
                                <option value="">-- Seleccione Rol --</option>
                                <option value="EmpleadoExpress">Empleado Express</option>
                                <option value="EmpleadoDE">Empleado Diseño y Edición</option>
                            </InputSelect>
                            <ValidationMessage For="() => Input.Cargo" class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td><label>Usuario (Email)</label></td>
                        <td>
                            <InputText @bind-Value="Input.Email" class="styled-input"
                                       type="email" disabled="@(EmpleadoId > 0)" placeholder="correo@ejemplo.com" />
                            <ValidationMessage For="() => Input.Email" class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Clave @(EmpleadoId > 0 ? "(Dejar vacío para no cambiar)" : "")</label>
                        </td>
                        <td>
                            <InputText @bind-Value="Input.Password" class="styled-input"
                                       type="password" placeholder="@(EmpleadoId > 0 ? "••••••••" : "Mínimo 6 caracteres")" />
                            <ValidationMessage For="() => Input.Password" class="text-danger" />
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" class="table-footer">
                            <div class="table-action-buttons">
                                <button type="button" class="btn-volver" @onclick="IrAtras">
                                    Volver
                                </button>
                                <button type="submit" class="btn-guardar">
                                    @(EmpleadoId > 0 ? "Actualizar" : "Guardar")
                                </button>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </EditForm>
    </div>

    <img src="/Img-Vector/Union.svg" class="vector-corner" />
</div>

@code {
    [Parameter]
    public int EmpleadoId { get; set; }
    private string? statusMessage;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    private Empleados? EmpleadoEnBD;
    private ApplicationUser? UserEnBD;

    protected override void OnInitialized()
    {
        Input ??= new InputModel();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (EmpleadoId > 0)
        {
            EmpleadoEnBD = await empleadoService.Buscar(EmpleadoId);

            if (EmpleadoEnBD != null)
            {
                UserEnBD = await UserManager.FindByEmailAsync(EmpleadoEnBD.Usuario);

                if (UserEnBD != null)
                {
                    Input.IdEmpleado = EmpleadoEnBD.IdEmpleado;
                    Input.Nombre = EmpleadoEnBD.Nombre;
                    Input.Cedula = EmpleadoEnBD.Cedula;
                    Input.Cargo = EmpleadoEnBD.Cargo;
                    Input.Email = UserEnBD.Email ?? string.Empty;
                    Input.Password = string.Empty;
                }
                else
                {
                    statusMessage = "Error: Usuario Identity no encontrado para este empleado.";
                    toastService.ShowError("Error de sincronización");
                }
            }
            else
            {
                statusMessage = $"Error: Empleado con ID {EmpleadoId} no encontrado.";
                toastService.ShowError("Empleado no existe");
            }
        }
    }

    private async Task GuardarEmpleado()
    {
        statusMessage = null;

        if (!EsCedulaValida(Input.Cedula))
        {
            statusMessage = "Error: La cédula ingresada no es válida (Verifique los dígitos).";
            toastService.ShowError("Cédula inválida");
            return;
        }

        if (EmpleadoId > 0 && EmpleadoEnBD != null && UserEnBD != null)
        {
            EmpleadoEnBD.Nombre = Input.Nombre;
            EmpleadoEnBD.Cargo = Input.Cargo;

            var guardadoBD = await empleadoService.Modificar(EmpleadoEnBD);

            var currentRoles = await UserManager.GetRolesAsync(UserEnBD);
            if (!currentRoles.Contains(Input.Cargo))
            {
                await UserManager.RemoveFromRolesAsync(UserEnBD, currentRoles);
                await UserManager.AddToRoleAsync(UserEnBD, Input.Cargo);
            }

            UserEnBD.Nombre = Input.Nombre;
            var userResult = await UserManager.UpdateAsync(UserEnBD);

            if (!string.IsNullOrWhiteSpace(Input.Password))
            {
                var token = await UserManager.GeneratePasswordResetTokenAsync(UserEnBD);
                var passwordResult = await UserManager.ResetPasswordAsync(UserEnBD, token, Input.Password);
                if (!passwordResult.Succeeded)
                {
                    statusMessage = $"Error al cambiar clave: {string.Join(", ", passwordResult.Errors.Select(e => e.Description))}";
                    toastService.ShowError("Error al cambiar clave");
                    return;
                }
            }

            if (guardadoBD && userResult.Succeeded)
            {
                statusMessage = $"Éxito: Empleado actualizado correctamente con rol '{Input.Cargo}'.";
                toastService.ShowSuccess("Empleado actualizado correctamente");
                await Task.Delay(2000);
                navigationManager.NavigateTo("/lista-empleados");
            }
            else
            {
                statusMessage = $"Error al actualizar datos. BD: {guardadoBD}. Identity: {string.Join(", ", userResult.Errors.Select(e => e.Description))}";
                toastService.ShowError("Error al actualizar");
            }
            return;
        }

        if (EmpleadoId == 0)
        {
            var existeEnBD = await empleadoService.Listar(e => e.Cedula == Input.Cedula);
            if (existeEnBD.Any())
            {
                statusMessage = "Error: Ya existe un empleado registrado con esta cédula.";
                toastService.ShowError("La cédula ya existe en el sistema");
                return;
            }

            var existingUser = await UserManager.FindByNameAsync(Input.Email);
            if (existingUser != null)
            {
                statusMessage = "Error: Ya existe un usuario registrado con este correo electrónico.";
                toastService.ShowError("El correo ya está en uso");
                return;
            }

            var user = new ApplicationUser
            {
                UserName = Input.Email,
                Email = Input.Email,
                EmailConfirmed = true,
                Nombre = Input.Nombre,
                Cedula = Input.Cedula,
                Cargo = Input.Cargo
            };

            var result = await UserManager.CreateAsync(user, Input.Password);

            if (result.Succeeded)
            {
                var roleResult = await UserManager.AddToRoleAsync(user, Input.Cargo);

                if (roleResult.Succeeded)
                {
                    var nuevoEmpleadoBD = new Empleados
                    {
                        Nombre = Input.Nombre,
                        Usuario = Input.Email,
                        Cedula = Input.Cedula,
                        Cargo = Input.Cargo,
                        Clave = "******"
                    };

                    var guardadoBD = await empleadoService.Guardar(nuevoEmpleadoBD);

                    if (guardadoBD)
                    {
                        Logger.LogInformation("Usuario registrado en Identity y Base de Datos local.");
                        statusMessage = $"Éxito: Empleado registrado correctamente con rol '{Input.Cargo}'.";
                        Input = new InputModel();
                        toastService.ShowSuccess("El empleado se guardó correctamente");
                        await Task.Delay(2000);
                        navigationManager.NavigateTo("/lista-empleados");
                    }
                    else
                    {
                        await UserManager.DeleteAsync(user);
                        statusMessage = "Error al guardar el empleado en la Base de Datos local. Rollback ejecutado.";
                        toastService.ShowError("Error al guardar en BD");
                    }
                }
                else
                {
                    await UserManager.DeleteAsync(user);
                    statusMessage = $"Error al asignar rol: {string.Join(", ", roleResult.Errors.Select(e => e.Description))}";
                    toastService.ShowError("Error de rol");
                }
            }
            else
            {
                statusMessage = $"Error al crear usuario: {string.Join(", ", result.Errors.Select(e => e.Description))}";
                toastService.ShowError("Error al crear usuario");
            }
        }
    }

    private bool EsCedulaValida(string pCedula)
    {
        if (string.IsNullOrWhiteSpace(pCedula)) return false;

        string vcCedula = pCedula.Replace("-", "").Replace(" ", "");

        if (vcCedula.Length != 11) return false;

        if (!long.TryParse(vcCedula, out _)) return false;

        int vnTotal = 0;
        int[] digitoMult = new int[11] { 1, 2, 1, 2, 1, 2, 1, 2, 1, 2, 1 };

        for (int vDig = 1; vDig <= 11; vDig++)
        {
            int vCalculo = int.Parse(vcCedula.Substring(vDig - 1, 1)) * digitoMult[vDig - 1];

            if (vCalculo < 10)
                vnTotal += vCalculo;
            else
                vnTotal += int.Parse(vCalculo.ToString().Substring(0, 1)) + int.Parse(vCalculo.ToString().Substring(1, 1));
        }

        return vnTotal % 10 == 0;
    }

    private void IrAtras()
    {
        navigationManager.NavigateTo("/lista-empleados");
    }

    public sealed class InputModel
    {
        public int IdEmpleado { get; set; }

        [Required(ErrorMessage = "El correo es requerido.")]
        [EmailAddress(ErrorMessage = "Formato inválido.")]
        public string Email { get; set; } = "";

        [StringLength(100, ErrorMessage = "Mínimo {2} caracteres.", MinimumLength = 6)]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "El nombre es requerido")]
        public string Nombre { get; set; } = "";

        [Required(ErrorMessage = "La cédula es requerida")]
        public string Cedula { get; set; } = "";

        [Required(ErrorMessage = "Debe seleccionar un cargo")]
        public string Cargo { get; set; } = "";
    }
}