@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]
@page "/"

@layout MainLayout
@rendermode InteractiveServer

<div class="pantalla-wrapper">
    <div class="pantalla-content">
        <h1 class="welcome-title">Bienvenido</h1>
        <div class="title-underline" aria-hidden="true"></div>
        <p class="subtitle">Sistema de Gestión de Empleados</p>
    </div>

    <!-- Icono contornos decorativos (inline SVGs para mayor control) -->
    <svg class="decor-plus top-right" viewBox="0 0 64 64" aria-hidden="true" focusable="false">
        <rect x="10" y="26" width="44" height="12" rx="3" fill="none" stroke="#F2994A" stroke-width="4" />
        <rect x="26" y="10" width="12" height="44" rx="3" fill="none" stroke="#F2994A" stroke-width="4" />
    </svg>

    <svg class="decor-plus filled bottom-right" viewBox="0 0 64 64" aria-hidden="true" focusable="false">
        <rect x="10" y="26" width="44" height="12" rx="3" fill="#F2994A" stroke="none" />
        <rect x="26" y="10" width="12" height="44" rx="3" fill="#F2994A" stroke="none" />
    </svg>
</div>