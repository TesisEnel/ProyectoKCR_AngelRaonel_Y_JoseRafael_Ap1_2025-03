@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]

@page "/historial-clientes"
@layout MainLayout
@inject NavigationManager navigationManager
@rendermode InteractiveServer
@inject ClienteService clienteService

<div class="lista-empleados-page">
    @* Reutilizamos la clase para el layout general (margen) *@
    <div class="content">
        <div class="list-card">

            @* 1. TÍTULO: Historial de Servicios y Clientes *@
            <h1 class="list-title">HISTORIAL DE SERVICIOS Y CLIENTES</h1>

            @* 2. BARRA DE FILTROS Y BÚSQUEDA *@
            <div class="top-toolbar">
                <div class="filter-group">
                    <label for="filter-select">Filtrar por</label>
                    <select id="filter-select" class="form-select" @bind="Filtro">
                        <option value="">Seleccione</option>
                        <option value="Cliente">Cliente</option>
                        <option value="Servicio">Servicio</option>
                        @* Añade más opciones si es necesario (ej. Fecha, ID de Servicio) *@
                    </select>
                </div>
                <div class="search-group">
                    <label for="search-input">Búsqueda</label>
                    <div class="search-input-container">
                        <input type="text" id="search-input" class="form-control" placeholder="Buscar" @bind="ValorFiltro" @oninput="Buscar" />
                        <span class="search-icon">🔍</span>
                    </div>
                </div>
            </div>

            @* 3. TABLA DE HISTORIAL *@
            <div class="table-container">
                <table class="empleados-table">
                    @* Reutilizamos la clase de tabla (empleados-table) *@
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Cedula</th>
                            <th>Correo</th>
                            <th>Telefono</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in clientes)
                        {
                            <tr>
                                <td>@cliente.IdCliente</td>
                                <td>@cliente.Nombres</td>
                                <td>@cliente.Cedula</td>
                                <td>@cliente.Correo</td>
                                <td>@cliente.Telefono</td>
                                <td>@cliente.Fecha.ToString("dd/MM/yyyy hh:mm")</td>
                               @* <td>
                                    <button class="btn-action btn-modificar" @onclick="() => VerDetalle(cliente.IdCliente)">Ver Detalle</button>
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* 4. BARRA INFERIOR CON BOTÓN VOLVER *@
            <div class="bottom-bar">
                <button class="btn-action btn-volver" @onclick="Volver">
                    <span class="icon">⬅️</span> Volver
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;
    private List<Clientes> clientes { get; set; } = new List<Clientes>();

    protected override async Task OnInitializedAsync()
    {
        clientes = await clienteService.Listar(c => c.IdCliente > 0);
    }

    public async Task Buscar()
    {
        if (ValorFiltro.Trim() != "")
        {
            if (Filtro == nameof(Clientes.Nombres)) clientes = await clienteService.Listar(c => c.Nombres.ToLower().Contains(ValorFiltro.ToLower()));
            else if (Filtro == nameof(Clientes.Cedula)) clientes = await clienteService.Listar(c => c.Cedula.ToLower().Contains(ValorFiltro.ToLower()));
            else if (Filtro == nameof(Clientes.Telefono)) clientes = await clienteService.Listar(c => c.Telefono.ToLower().Contains(ValorFiltro.ToLower()));
            else if (Filtro == nameof(Clientes.Correo)) clientes = await clienteService.Listar(c => c.Correo.ToLower().Contains(ValorFiltro.ToLower()));
            else if (Filtro == nameof(Clientes.IdCliente) && int.TryParse(ValorFiltro, out var Id)) clientes = await clienteService.Listar(c => c.IdCliente == Id);
        }
    }

    // private void VerDetalle(int id)
    // {
    //     // Redirige a una página de detalle del servicio
    //     Console.WriteLine($"Navegando al detalle del servicio: {id}");
    //     // NavigationManager.NavigateTo($"/detalle-servicio/{id}");
    // }

    private void Volver()
    {
        navigationManager.NavigateTo("/"); // Asumiendo que "/" es tu página principal.
    }
}