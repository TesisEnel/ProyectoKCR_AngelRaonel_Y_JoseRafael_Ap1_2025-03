@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]

@page "/lista-empleados"


@layout MainLayout
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<div class="lista-empleados-page">
    <div class="content">
        <div class="list-card">

            <h1 class="list-title">LISTADO DE EMPLEADOS</h1>

            <div class="top-toolbar">
                <div class="filter-group">
                    <label for="filter-select">Filtrar por</label>
                    <select id="filter-select" class="form-select" @bind="FiltroSeleccionado">
                        <option value="">Seleccione</option>
                        <option value="Cargo">Cargo</option>
                        <option value="ID">ID</option>
                    </select>
                </div>
                <div class="search-group">
                    <label for="search-input">Búsqueda</label>
                    <div class="search-input-container">
                        <input type="text" id="search-input" class="form-control" placeholder="Buscar" @bind="TerminoBusqueda" @oninput="Buscar" />
                        <span class="search-icon">🔍</span>
                    </div>
                </div>
            </div>

            <div class="table-container">
                <table class="empleados-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Cédula</th>
                            <th>Cargo</th>
                            <th>Usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var empleado in EmpleadosFiltrados)
                        {
                            <tr>
                                <td>@empleado.IdEmpleado</td>
                                <td>@empleado.Nombre</td>
                                <td>@empleado.Cedula</td>
                                <td>@empleado.Cargo</td>
                                <td>@empleado.Usuario</td>
                                <td>
                                    <button class="btn-action btn-modificar" @onclick="() => Modificar(empleado.IdEmpleado)">Modificar</button>
                                    <button class="btn-action btn-eliminar" @onclick="() => Eliminar(empleado.IdEmpleado)">Eliminar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="bottom-bar">
                <button class="btn-action btn-volver" @onclick="Volver">
                    <span class="icon">⬅️</span> Volver
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    private string FiltroSeleccionado { get; set; } = "";
    private string TerminoBusqueda { get; set; } = "";
    private List<EmpleadoModelo> EmpleadosFiltrados => AplicarFiltroYBusqueda();

    public class EmpleadoModelo
    {
        public string IdEmpleado { get; set; }
        public string Nombre { get; set; }
        public string Cedula { get; set; }
        public string Cargo { get; set; }
        public string Usuario { get; set; }
        public string Clave { get; set; }
    }

    private List<EmpleadoModelo> Empleados = new List<EmpleadoModelo>
    {
        new EmpleadoModelo { IdEmpleado = "E001", Nombre = "Juan Pérez", Cedula = "402-XXXXXXX-X", Cargo = "Diseñador", Usuario = "jperez" },
        new EmpleadoModelo { IdEmpleado = "E002", Nombre = "Maria Gómez", Cedula = "001-XXXXXXX-X", Cargo = "Cajero", Usuario = "mgomez" },
        new EmpleadoModelo { IdEmpleado = "E003", Nombre = "Carlos Ruiz", Cedula = "223-XXXXXXX-X", Cargo = "Supervisor", Usuario = "cruiz" }
    };

    // --- Lógica de Búsqueda y Filtro ---
    private List<EmpleadoModelo> AplicarFiltroYBusqueda()
    {
        var lista = Empleados.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(TerminoBusqueda))
        {
            var termino = TerminoBusqueda.ToLower();
            lista = lista.Where(e => e.Nombre.ToLower().Contains(termino) ||
                                     e.IdEmpleado.ToLower().Contains(termino) ||
                                     e.Cargo.ToLower().Contains(termino));
        }

        // Puedes añadir lógica de filtro por `FiltroSeleccionado` si lo deseas.
        // Ejemplo: if (FiltroSeleccionado == "Cargo") { lista = lista.OrderBy(e => e.Cargo); }

        return lista.ToList();
    }

    private void Buscar()
    {
        // Esto forzará la re-renderización y la aplicación del filtro
        StateHasChanged();
    }
    // ------------------------------------

    private void RegistrarNuevo()
    {
        NavigationManager.NavigateTo("/registro-empleado");
    }

    private void Modificar(string id)
    {
        NavigationManager.NavigateTo($"/modificar-empleado/{id}");
    }

    private void Eliminar(string id)
    {
        Console.WriteLine($"Eliminando empleado con ID: {id}");
        var empleadoAEliminar = Empleados.FirstOrDefault(e => e.IdEmpleado == id);
        if (empleadoAEliminar != null)
        {
            Empleados.Remove(empleadoAEliminar);
            StateHasChanged(); // Para actualizar la tabla
        }
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/");  
    }
}