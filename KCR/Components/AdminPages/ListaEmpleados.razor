@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador")]

@page "/lista-empleados"

@using KCR.Models
@using KCR.Services

@layout MainLayout
@inject NavigationManager navigationManager
@inject EmpleadoService empleadoService
@rendermode InteractiveServer

<div class="lista-empleados-page">
    <div class="content">
        <div class="list-card">

            <h1 class="list-title">LISTADO DE EMPLEADOS</h1>

            <div class="top-toolbar">
                <div class="filter-group">
                    <label for="filter-select">Filtrar por</label>
                    <select id="filter-select" class="form-select" @bind="Filtro">
                        <option value="">Seleccione</option>
                        <option value="Nombre">Nombre</option>
                        <option value="Cargo">Cargo</option>
                        <option value="IdEmpleado">ID</option>
                    </select>
                </div>
                <div class="search-group">
                    <label for="search-input">Búsqueda</label>
                    <div class="search-input-container">
                        <input type="text" id="search-input" class="form-control" placeholder="Buscar" @bind="ValorFiltro" @oninput="Buscar" />
                        <span class="search-icon">🔍</span>
                    </div>
                </div>
                <div class="button-group">
                    <button class="btn-action btn-registrar" @onclick="RegistrarNuevo">
                        <span class="icon">➕</span> Nuevo Empleado
                    </button>
                </div>
            </div>

            <div class="table-container">

                @if (isLoading)
                {
                    <p class="loading-message">Cargando listado de empleados...</p>
                }
                else if (!EmpleadosFiltrados.Any())
                {
                    <p class="no-results-message">No se encontraron empleados. Intente ajustar la búsqueda o registre uno nuevo.</p>
                }
                else
                {
                    <table class="empleados-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Cédula</th>
                                <th>Cargo</th>
                                <th>Usuario</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var empleado in EmpleadosFiltrados)
                            {
                                <tr>
                                    <td>@empleado.IdEmpleado</td>
                                    <td>@empleado.Nombre</td>
                                    <td>@empleado.Cedula</td>
                                    <td>@empleado.Cargo</td>
                                    <td>@empleado.Usuario</td>
                                    <td>
                                        <button class="btn-action btn-modificar" @onclick="() => Modificar(empleado.IdEmpleado)">Modificar</button>
                                        <button class="btn-action btn-eliminar" @onclick="() => Eliminar(empleado.IdEmpleado)">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>

            <div class="bottom-bar">
                <button class="btn-action btn-volver" @onclick="Volver">
                    <span class="icon">⬅️</span> Volver
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private string ValorFiltro { get; set; } = ""; 
    private string Filtro { get; set; } = ""; 

    private List<Empleados> Empleados = new();
    private bool isLoading = true;

    private List<Empleados> EmpleadosFiltrados => AplicarFiltroYBusqueda();


    protected override async Task OnInitializedAsync()
    {
        await CargarEmpleados();
    }

    private async Task CargarEmpleados()
    {
        isLoading = true;
        try
        {
            Empleados = await empleadoService.ListarTodosAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar empleados: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }


    private List<Empleados> AplicarFiltroYBusqueda()
    {
        var lista = Empleados.AsEnumerable();
        var textoBusqueda = ValorFiltro.Trim().ToLower();

        if (!string.IsNullOrWhiteSpace(textoBusqueda))
        {
            if (Filtro == "Nombre")
            {
                lista = lista.Where(e => e.Nombre != null && e.Nombre.ToLower().Contains(textoBusqueda));
            }
            else if (Filtro == "Cargo")
            {
                lista = lista.Where(e => e.Cargo != null && e.Cargo.ToLower().Contains(textoBusqueda));
            }
            else if (Filtro == "IdEmpleado")
            {
                // Manejo seguro para ID (entero)
                if (int.TryParse(ValorFiltro.Trim(), out int idBusqueda))
                {
                    lista = lista.Where(e => e.IdEmpleado == idBusqueda);
                }
                else
                {
                    return new List<Empleados>();
                }
            }
            else 
            {
                lista = lista.Where(e => (e.Nombre != null && e.Nombre.ToLower().Contains(textoBusqueda)) ||
                                         (e.Cargo != null && e.Cargo.ToLower().Contains(textoBusqueda)) ||
                                          e.IdEmpleado.ToString().Contains(textoBusqueda));
            }
        }


        if (Filtro == "Cargo")
        {
            lista = lista.OrderBy(e => e.Cargo);
        }
        else if (Filtro == "IdEmpleado")
        {
            lista = lista.OrderBy(e => e.IdEmpleado);
        }


        return lista.ToList();
    }

    public async Task Eliminar(int id)
    {
        StateHasChanged();
    }


    private void RegistrarNuevo()
    {
        navigationManager.NavigateTo("/registro-empleado");
    }

    private void Modificar(int id)
    {
        navigationManager.NavigateTo($"/modificar-empleado/{id}");
    }

    private async Task Eliminar(int id)
    {
        Console.WriteLine($"Intentando eliminar empleado con ID: {id}");

        if (await empleadoService.Eliminar(id))
        {
            await CargarEmpleados();
        }
        else
        {
            Console.WriteLine("Error al intentar eliminar el empleado.");
        }
    }



    private void Volver()
    {
        navigationManager.NavigateTo("/");
    }
}